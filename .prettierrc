{
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 140,
    "overrides": [
        {
            "files": "*.json",
            "options": { "parser": "json" }
        },
        {
            "files": "*.md",
            "options": { "parser": "markdown" }
        },
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.html",
            "options": { "parser": "html" }
        },
        {
            "files": "*.css",
            "options": { "parser": "css" }
        },
        {
            "files": "*.sass",
            "options": { "parser": "scss" }
        },
        {
            "files": "*.scss",
            "options": { "parser": "scss" }
        },
        {
            "files": "*.yaml",
            "options": { "parser": "yaml" }
        }
    ]
}
